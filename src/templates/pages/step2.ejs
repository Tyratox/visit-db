<%- include('../header') -%>
	<div class="container">
		<h1>
			Patientendaten erfassen
		</h1>
		<div class="row">
			<div class="col-12 col-md-6">
			<table class="table table-striped table-bordered table-responsive">
				<tbody>
					<tr><td>Spital</td><td><%= visit.hospital_name %></td></tr>
					<tr><td>Station</td><td><%= visit.station_name %></td></tr>
				</tbody>
			</table>
			</div>
		</div>
		<p>
			<form action="/" method="POST" data-parsley-validate>
				<div class="row">
					<div class="col-12 col-md-6">
						<div class="form-group">
							<label for="case_number">Fallnummer</label>
							<input
								type="text"
								class="form-control"
								id="case_number"
								name="case_number"
								value="<% locals.case_number ? case_number : '' %>"
								placeholder="Gib hier die Fallnummer ein"
								required
							>
						</div>
						<div class="form-group">
							<label for="date_of_birth">Geburtsdatum</label>
							<input
								type="text"
								class="form-control"
								id="date_of_birth"
								name="date_of_birth"
								value="<% locals.date_of_birth ? date_of_birth : '' %>"
								placeholder="Gib hier das Geburtsdatum des Patienten im Format dd.mm.YYYY an"
								required
								pattern="[0-9]{2}\.[0-9]{2}\.[0-9]{4}"
							>
						</div>
					</div>
					<div class="col-12 col-md-6">
						<div class="form-group">
							<label for="case_number">Patientennummer (optional)</label>
							<input
								type="text"
								class="form-control"
								id="patient_number"
								name="patient_number"
								value="<% locals.patient_number ? patient_number : '' %>"
								placeholder="Gib hier die Nummer des Patienten ein"
								required
							>
						</div>
						<div class="form-group">
							<label for="gender">Geschlecht</label>
							<div class="form-check">
								<label class="form-check-label">
									<input class="form-check-input" type="radio" name="gender" value="male" checked>
									MÃ¤nnlich
								</label>
							</div>
								<div class="form-check">
								<label class="form-check-label">
									<input class="form-check-input" type="radio" name="gender"" value="femal">
									Weiblich
								</label>
							</div>
						</div>
					</div>
				</div>
				<button type="submit" class="btn btn-primary">
					Erfassen
				</button>
			</form>
		</p>
	</div>
<%- include('../footer') -%>