<%- include('../header') -%>
	<div class="container">
		<h2>
			Patientendaten erfassen
		</h2>
		<div class="row">
			<div class="col-12 col-md-6">
				<div class="table-responsive">
					<table class="table table-striped table-bordered">
						<tbody>
							<tr><td>Typ</td><td><%= visit.visit_type_name %></td></tr>
							<tr>
								<td>Ort</td>
								<td>
									<%=
										visit.hospital_name + ", " +
										visit.station_name + " (" +
										visit.discipline_name + ")"
									%>
								</td>
							</tr>
							<tr><td>Datum</td><td><%= visit.date %></td></tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<p>
			<form action="" method="POST" data-parsley-validate>
				<section>
					<div class="row">
						<div class="col-12 col-md-6">
							<div class="form-group">
								<label for="case_number">Fallnummer</label>
								<input
									type="text"
									class="form-control"
									id="case_number"
									name="case_number"
									value="<%= locals.case_number ? case_number : '' %>"
									placeholder="Gib hier die Fallnummer ein"
									required
								>
							</div>
							<div class="form-group">
								<label for="date_of_birth">Geburtsdatum</label>
								<input
									type="text"
									class="form-control"
									id="date_of_birth"
									name="date_of_birth"
									value="<%= locals.date_of_birth ? date_of_birth : '' %>"
									placeholder="Gib hier das Geburtsdatum des Patienten im Format dd.mm.YYYY an"
									required
									pattern="(^(((0[1-9]|1[0-9]|2[0-8])[\.](0[1-9]|1[012]))|((29|30|31)[\.](0[13578]|1[02]))|((29|30)[\..](0[4,6,9]|11)))[\.](19|[2-9][0-9])\d\d$)|(^29[\.]02[\.](19|[2-9][0-9])(00|04|08|12|16|20|24|28|32|36|40|44|48|52|56|60|64|68|72|76|80|84|88|92|96)$)"
								>
							</div>
						</div>
						<div class="col-12 col-md-6">
							<div class="form-group">
								<label for="patient_number">Patientennummer (optional)</label>
								<input
									type="text"
									class="form-control"
									id="patient_number"
									name="patient_number"
									value="<%= locals.patient_number ? patient_number : '' %>"
									placeholder="Gib hier die Nummer des Patienten ein"
								>
							</div>
							<div class="form-group">
								<label for="gender">Geschlecht</label>
								<div class="form-check">
									<label class="form-check-label">
										<input
											class="form-check-input"
											type="radio"
											name="gender"
											value="male"
											<%-
												(locals.gender && gender === "male") ||
												(!locals.gender) ? "checked" : ""
											%>
										>
										Männlich
									</label>
								</div>
									<div class="form-check">
									<label class="form-check-label">
										<input
											class="form-check-input"
											type="radio"
											name="gender"
											value="female"
											<%-
												locals.gender && gender === "female" ? "checked" : ""
											%>
										>
										Weiblich
									</label>
								</div>
							</div>
						</div>
					</div>
				</section>
				<section>
					<div class="row">
						<div class="col-12 col-md-6">
							<div class="form-group">
								<label for="case_type">Falltyp</label>
								<select class="custom-select form-control" name="case_type" id="case_type" required>
									<%- caseTypes.map(({id, abbreviation, name}, index) => {
										return `<option ${
											(locals.caseType ? (id === caseType) : (index === 0)) ? "selected" : ""
											} value=${id}>${name} (${abbreviation})</option>`;
									}).join("") %>
								</select>
							</div>
						</div>
					</div>
				</section>
				<section class="repeatable">
					<h2>Interventionen</h2>
					<div class="row insert">
						<%-
						locals.interventions && interventions.length > 0 ? interventions.map(({
							drug,
							problem,
							suggestion,
							substance_id,
							intervention_problem_id,
							intervention_reason_id,
							intervention_type_id,
							intervention_result_id
						}) => {
							return `
							<div class="col-12 mb-2 pb-2 repeat-el">
								<div class="row">
									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>Wirkstoff</label>
											${
												locals.substance_id ?
												`<input
												type="text"
												class="form-control filter awesomplete-placeholder"
												readonly
												value="${locals.substance_id ? substances.filter(d => d.id === substance_id)[0].name : ''}"
												>` : ''
											}
											<input
												type="text"
												class="form-control awesomplete-label"
												name="intervention_substance_id[]"
												style="${locals.substance_id ? "display:none;" : ""}"
												value="${locals.substance_id ? locals.substance_id : ""}"
												placeholder="Gib hier den Namen des Wirkstoffes ein"
												data-label="${substances.map(s => s.name + ' (' + s.atc_code + ')').join(';')}"
												data-value="${substances.map(s => s.id).join(';')}"
												data-minchars="1"
												data-autofirst="true"
												pattern="[0-9]+"
											>
										</div>
										<div class="form-group">
											<label>Betroffenes Medikament</label>
											<input
												type="text"
												class="form-control"
												name="intervention_drug[]"
												value="${drug}"
												placeholder="Gib hier den Namen des betroffenen Medikamentes ein"
												required
											>
										</div>
										<div class="form-group">
											<label>Problem</label>
											<textarea
												type="text"
												class="form-control"
												name="intervention_problem[]"
												rows="5"
												placeholder="Beschreibe hier das Problem"
											>${problem}</textarea>
										</div>
										<div class="form-group">
											<label>Vorschlag</label>
											<textarea
												type="text"
												class="form-control"
												name="intervention_suggestion[]"
												rows="5"
												placeholder="Gib hier einen Lösungsvorschlag ein"
											>${suggestion}</textarea>
										</div>
									</div>
									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>Erfasstes Problem</label>
											<select class="custom-select form-control" name="intervention_problem_id[]" required>
												<option value="">Wähle eine Problemklasse</option>
												${interventionProblems.map(({id, name}, index) => {
													return `<option
														${id === intervention_problem_id ? "selected" : ""}
														value=${id}
														>${name}</option>`;
												}).join("")}
											</select>
										</div>
										<div class="form-group">
											<label>Grund der Intervention</label>
											<select class="custom-select form-control" name="intervention_reason_id[]" required>
												<option value="">Wähle den Grund den Intervention</option>
												${interventionReasons.map(({id, name}, index) => {
													return `<option
														${id === intervention_reason_id ? "selected" : ""}
														value=${id}
													>${name}</option>`;
												}).join("")}
											</select>
										</div>
										<div class="form-group">
											<label>Intervention</label>
											<select class="custom-select form-control" name="intervention_type_id[]" required>
												<option value="">Wähle den Typ den Intervention</option>
												${interventionTypes.map(({id, name}, index) => {
													return `<option
													${id === intervention_type_id ? "selected" : ""}
													value=${id}
													>${name}</option>`;
												}).join("")}
											</select>
										</div>
										<div class="form-group">
											<label>Resultat der Intervention</label>
											<select class="custom-select form-control" name="intervention_result_id[]">
												<option value="">Noch kein Resultat</option>
												${interventionResults.map(({id, name}, index) => {
													return `<option
													${id === intervention_result_id ? "selected" : ""}
													value=${id}
													>${name}</option>`;
												}).join("")}
											</select>
										</div>
									</div>
								</div>
								<hr>
							</div>
							`;}).join("") :
							`<div class="col-12 mb-2 pb-2 repeat-el">
								<div class="row">
									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>Wirkstoff</label>
											<input
												type="text"
												class="form-control awesomplete-label"
												name="intervention_substance_id[]"
												placeholder="Gib hier den Namen des Wirkstoffes ein"
												data-label="${substances.map(s => s.name + ' (' + s.atc_code + ')').join(';')}"
												data-value="${substances.map(s => s.id).join(';')}"
												data-minchars="1"
												data-autofirst="true"
												pattern="[0-9]+"
											>
										</div>
										<div class="form-group">
											<label>Betroffenes Medikament</label>
											<input
												type="text"
												class="form-control"
												name="intervention_drug[]"
												placeholder="Gib hier den Namen des betroffenen Medikamentes ein"
												required
											>
										</div>
										<div class="form-group">
											<label>Problem</label>
											<textarea
												type="text"
												class="form-control"
												name="intervention_problem[]"
												rows="5"
												placeholder="Beschreibe hier das Problem"
											></textarea>
										</div>
										<div class="form-group">
											<label>Vorschlag</label>
											<textarea
												type="text"
												class="form-control"
												name="intervention_suggestion[]"
												rows="5"
												placeholder="Gib hier einen Lösungsvorschlag ein"
											></textarea>
										</div>
									</div>
									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>Erfasstes Problem</label>
											<select class="custom-select form-control" name="intervention_problem_id[]" required>
												<option value="" selected>Wähle eine Problemklasse</option>
												${interventionProblems.map(({id, name}, index) => {
													return `<option value=${id}>${name}</option>`;
												}).join("")}
											</select>
										</div>
										<div class="form-group">
											<label>Grund der Intervention</label>
											<select class="custom-select form-control" name="intervention_reason_id[]" required>
												<option value="" selected>Wähle den Grund den Intervention</option>
												${interventionReasons.map(({id, name}, index) => {
													return `<option value=${id}>${name}</option>`;
												}).join("")}
											</select>
										</div>
										<div class="form-group">
											<label>Intervention</label>
											<select class="custom-select form-control" name="intervention_type_id[]" required>
												<option value="" selected>Wähle den Typ den Intervention</option>
												${interventionTypes.map(({id, name}, index) => {
													return `<option value=${id}>${name}</option>`;
												}).join("")}
											</select>
										</div>
										<div class="form-group">
											<label>Resultat der Intervention</label>
											<select class="custom-select form-control" name="intervention_result_id[]">
												<option value="" selected>Noch kein Resultat</option>
												${interventionResults.map(({id, name}, index) => {
													return `<option value=${id}>${name}</option>`;
												}).join("")}
											</select>
										</div>
									</div>
								</div>
								<hr>
							</div>
							`;
						%>
						<div class="col-12 repeat">
							<a
								class="btn btn-primary"
								data-toggle="tooltip"
								data-placement="bottom"
								title="Weiteres Feld hinzufügen"
							>
								+
							</a>
						</div>
					</div>
				</section>
				<button type="submit" class="btn btn-primary">
					Erfassen
				</button>
			</form>
		</p>
	</div>
<%- include('../footer') -%>