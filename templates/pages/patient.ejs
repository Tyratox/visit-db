<%- include('../header') -%>
	<div class="container">
		<h2>
			Patientendaten erfassen
		</h2>
		<div class="row">
			<div class="col-12 col-md-6">
				<div class="table-responsive">
					<table class="table table-striped table-bordered">
						<tbody>
							<tr><td>Typ</td><td><%= visit.visit_type_name %></td></tr>
							<tr>
								<td>Ort</td>
								<td>
									<%=
										visit.hospital_name + ", " +
										visit.station_name + " (" +
										visit.discipline_name + ")"
									%>
								</td>
							</tr>
							<tr><td>Datum</td><td><%= visit.date %></td></tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<p>
			<form action="" method="POST" data-parsley-validate>
				<section>
					<div class="row">
						<div class="col-12 col-md-6">
							<div class="form-group">
								<label for="case_number">Fallnummer</label>
								<input
									type="text"
									class="form-control"
									id="case_number"
									name="case_number"
									value="<%= locals.case_number ? case_number : '' %>"
									placeholder="Gib hier die Fallnummer ein"
									required
								>
							</div>
							<div class="form-group">
								<label for="date_of_birth">Geburtsdatum</label>
								<input
									type="text"
									class="form-control"
									id="date_of_birth"
									name="date_of_birth"
									value="<%= locals.date_of_birth ? date_of_birth : '' %>"
									placeholder="Gib hier das Geburtsdatum des Patienten im Format dd.mm.YYYY an"
									required
									pattern="[0-9]{2}\.[0-9]{2}\.[0-9]{4}"
								>
							</div>
						</div>
						<div class="col-12 col-md-6">
							<div class="form-group">
								<label for="patient_number">Patientennummer (optional)</label>
								<input
									type="text"
									class="form-control"
									id="patient_number"
									name="patient_number"
									value="<%= locals.patient_number ? patient_number : '' %>"
									placeholder="Gib hier die Nummer des Patienten ein"
								>
							</div>
							<div class="form-group">
								<label for="gender">Geschlecht</label>
								<div class="form-check">
									<label class="form-check-label">
										<input
											class="form-check-input"
											type="radio"
											name="gender"
											value="male"
											<%-
												(locals.gender && gender === "male") ||
												(!locals.gender) ? "checked" : ""
											%>
										>
										Männlich
									</label>
								</div>
									<div class="form-check">
									<label class="form-check-label">
										<input
											class="form-check-input"
											type="radio"
											name="gender"
											value="female"
											<%-
												locals.gender && gender === "female" ? "checked" : ""
											%>
										>
										Weiblich
									</label>
								</div>
							</div>
						</div>
					</div>
				</section>
				<section>
					<div class="row">
						<div class="col-12 col-md-6">
							<div class="form-group">
								<label for="case_type">Falltyp</label>
								<select class="custom-select form-control" name="case_type" id="case_type" required>
									<%- caseTypes.map(({id, abbreviation, name}, index) => {
										return `<option ${
											(locals.caseType ? (id === caseType) : (index === 0)) ? "selected" : ""
											} value=${id}>${name} (${abbreviation})</option>`;
									}).join("") %>
								</select>
							</div>
						</div>
						<div class="col-12 col-md-6">
							<div class="form-group">
								<label for="substance">Wirkstoff (optional)</label>
								<% if(locals.substance){ %>
									<input
										type="text"
										class="form-control filter awesomplete-placeholder"
										readonly
										value="<%= locals.substance ? substances.filter(s => s.id === substance)[0].name : '' %>"
										>
								<% } %>
								<input
									type="text"
									class="form-control awesomplete-label"
									style="<%= locals.substance ? 'display:none' : '' %>"
									id="substance"
									name="substance"
									value="<%= locals.substance ? substance : '' %>"
									placeholder="Gib hier den Namen des Wirkstoffes ein"
									data-label="<%= substances.map(s => s.name + ' (' + s.atc_code + ')').join(';') %>"
									data-value="<%= substances.map(s => s.id).join(';') %>"
									data-minchars="1"
									data-autofirst="true"
									pattern="[0-9]+"
								>
							</div>
						</div>
					</div>
				</section>
				<section>
					<h2>Eigene Felder</h2>
					<div class="row repeatable">
						<%-
						locals.fields ? fields.map(({title, content}) => {
							return `
							<div class="col-12 col-md-6">
								<div class="form-group">
									<input
										type="text"
										class="form-control"
										name="field_title[]"
										value="${title}"
										placeholder="Gib hier die Überschrift des Feldes ein"
									>
								</div>
								<div class="form-group">
									<textarea
										type="text"
										class="form-control"
										name="field_content[]"
										rows="5"
										placeholder="Gib hier den Inhalt des Feldes ein"
									>${content}</textarea>
								</div>
							</div>
							`;}) : `
							<div class="col-12 col-md-6">
								<div class="form-group">
									<input
										type="text"
										class="form-control"
										name="field_title[]"
										placeholder="Gib hier die Überschrift des Feldes ein"
									>
								</div>
								<div class="form-group">
									<textarea
										type="text"
										class="form-control"
										name="field_content[]"
										rows="5"
										placeholder="Gib hier den Inhalt des Feldes ein"
									></textarea>
								</div>
							</div>
							`;
						%>
						<div class="col-12 repeat">
							<a
								class="btn btn-primary"
								data-toggle="tooltip"
								data-placement="bottom"
								title="Weiteres Feld hinzufügen"
							>
								+
							</a>
						</div>
					</div>
				</section>
				<button type="submit" class="btn btn-primary">
					Erfassen
				</button>
			</form>
		</p>
	</div>
<%- include('../footer') -%>