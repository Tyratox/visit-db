						visitsPerStation.map(({
								station_id,
								name,
								hospital_abbreviation,
								count,
								patient_count,
								correction_count,
								duration
							}) => {
							return `
								<tr data-clickable="/visits/?filter[station_id]=${station_id}">
									<td>${name} (${hospital_abbreviation})</td>
									<td>${count}</td>
									<td>${patient_count}</td>
									<td>${correction_count ? correction_count : 0}</td>
									<td>${duration}</td>
								</tr>
							`;
						}).join("")
					%>
				</tbody>
			</table>
		</div>
	</div>
